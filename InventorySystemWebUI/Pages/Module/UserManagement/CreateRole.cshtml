@page
@model InventorySystemWebUI.Pages.Module.UserManagement.CreateRoleModel
@{
    ViewData["Title"] = "Create New Role";
}

<div style="margin-left:60px" class="mt-3 d-flex justify-content-center align-items-center">
    <div class="content-body container px-5">
        <div class="content-header">
            <div class="row content-header-left col-md-8 col-12 mb-2 breadcrumb-new">
                <h3 class="content-header-title mt-3 d-inline-block">Create New Role</h3>
                <div class="breadcrumbs-top d-inline-block">
                    <div class="breadcrumb-wrapper col-12">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="/Home">Home</a></li>
                        </ol>
                    </div>
                </div>
            </div>
        </div>

        <section class="card">
            <form>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="form-label">Enter Role Name <span class="text-danger">*</span></label>
                                <input type="text" class="form-control" />
                            </div>

                            <div class="form-group">
                                <label class="form-label">Select Priveledges <span class="text-danger">*</span></label>
                                <select class="form-control">
                                    <option class="form-control">Option1</option>
                                    <option class="form-control">Option2</option>
                                </select>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="form-label">Display of Priveledges selected</label>
                                <select class="form-control">
                                    <option class="form-control">Option1</option>
                                    <option class="form-control">Option2</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    
                    <button class="btn btn-primary btn-md mt-3 mb-3" style="margin-left:10px"><i class="fa fa-save"></i> Save</button>
                </div>
            </form>
        </section>
       
    </div>
</div>

